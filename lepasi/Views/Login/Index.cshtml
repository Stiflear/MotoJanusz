@*@{
        Layout = null;
    }*@
<!DOCTYPE html>
<html>
<head>
    <link href="~/Models/Login/Login.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript">

        function validation() {
            var user = document.getElementById("nick");
            var pass = document.getElementById("password");

            if (user.value == "admin") {
                if (pass.value == "admin") {
                    window.location.href = "../MainSite/Index";
                } else {
                    alert("Złe hasło!")
                }
            } else {
                alert("Zła nazwa użytkownika!")
            }
        }

        function rejestracja() {
            var reguser = document.getElementById("reguser");
            var regpass1 = document.getElementById("regpass1");
            var regpass2 = document.getElementById("regpass2");
            if (reguser.value == "") {
                alert("Podaj nick");
            } else if (regpass1.value == "") {
                alert("Podaj hasło");
            } else if (regpass2.value == "") {
                alert("Powtórz hasło");
            }
            if (regpass1.value != regpass2.value) {
                alert("Hasła nie są zgodne!")
            }
        }

    </script>
    <title>Logowanie</title>
</head>
<body>
    <form id="myForm" method="get" action="">
        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Zaloguj</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Zarejestruj</label>

                <div class="login-form">

                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="user" class="label">Nazwa użytkownika</label>
                            <input id="nick" type="text" class="input">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Hasło</label>
                            <input id="password" type="text" class="input">
                        </div>
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span>Pozostaw zalogowanym</label>
                        </div>
                        <div class="group">
                            <input type="button" class="button" id="demo" onclick="validation()" value="Zaloguj">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a href="#forgot">Zapomniałem hasła</a>
                        </div>
                    </div>


                    <div class="sign-up-htm">
                        <div class="group">
                            <label for="user" class="label">Nazwa użytkownika</label>
                            <input type="text" class="input" id="reguser">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Hasło</label>
                            <input type="text" class="input" id="regpass1">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Powtórz hasło</label>
                            <input type="text" class="input" id="regpass2">
                        </div>
                        <div class="group">
                            <input type="button" class="button" onclick="rejestracja()" value="Zarejestruj">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <label for="tab-1">Masz konto?</label>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</body>
</html>
